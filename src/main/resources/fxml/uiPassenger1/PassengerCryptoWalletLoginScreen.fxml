<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" styleClass="bodybg" stylesheets="@../../css/PassengerBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="53.0" prefWidth="890.0">
      <Button fx:id="cryptoWalletBackButton" mnemonicParsing="false" onAction="#switchToPassengerNovaCreditsMenuScreen"
              prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
         <effect>
            <DropShadow/>
         </effect>
      </Button>
   </HBox>
   <VBox alignment="CENTER" prefHeight="302.0" prefWidth="890.0">
      <Label alignment="CENTER" prefHeight="90.0" prefWidth="542.0" text="Authenticate with Crypto Nexus"
             textFill="WHITE">
         <font>
            <Font name="System Bold" size="30.0"/>
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="78.0" prefWidth="890.0" spacing="50.0">
         <Label fx:id="comfortSelectedTimeslotLabel" alignment="CENTER" prefHeight="37.0" prefWidth="158.0"
                text="Crypto User" textFill="WHITE">
            <font>
               <Font size="20.0"/>
            </font>
         </Label>
         <TextField fx:id="cryptoUserTextField"/>
      </HBox>
      <HBox alignment="CENTER" prefHeight="77.0" prefWidth="890.0" spacing="50.0">
         <Label fx:id="comfortSelectedTimeslotLabel1" alignment="CENTER" prefHeight="37.0" prefWidth="158.0"
                text="Crypto PIN" textFill="WHITE">
            <font>
               <Font size="20.0"/>
            </font>
         </Label>
         <TextField fx:id="cryptoPINTextField"/>
      </HBox>
   </VBox>
   <VBox alignment="BOTTOM_CENTER" prefHeight="70.0" prefWidth="890.0">
      <Button fx:id="logInButton" mnemonicParsing="false" onAction="#switchToPassengerSelectCryptoScreen"
              prefHeight="60.0" prefWidth="150.0" style="-fx-background-color: white;" text="Log In">
         <font>
            <Font size="20.0"/>
         </font>
         <effect>
            <DropShadow/>
         </effect>
      </Button>
   </VBox>
</VBox>
