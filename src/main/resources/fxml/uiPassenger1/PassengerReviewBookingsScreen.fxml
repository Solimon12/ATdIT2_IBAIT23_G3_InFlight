      <Label text="Approval" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" prefWidth="200"/>
      <Label text="Cancel" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold;" prefWidth="120"/>
   </HBox>

   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-border-color: white;">

      <VBox fx:id="bookingReviewContainer"
            spacing="15.0"
            alignment="CENTER"
            prefWidth="800"
            prefHeight="500"
            layoutX="50"
            layoutY="100"/>


   </HBox>
