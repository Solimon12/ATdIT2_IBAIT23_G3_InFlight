<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" styleClass="bodybg" stylesheets="@../../css/PassengerBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="53.0" prefWidth="890.0">
      <children>
         <Button fx:id="BookingCheckBackButton" mnemonicParsing="false" onAction="#backToTimeslotSelectionScreen" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </HBox>
   <VBox alignment="CENTER" prefHeight="302.0" prefWidth="890.0">
      <children>
         <Label prefHeight="90.0" prefWidth="283.0" text="Check your booking" textFill="WHITE">
            <font>
               <Font name="System Bold" size="30.0" />
            </font>
         </Label>
         <Label fx:id="tierLabel" alignment="CENTER" prefHeight="36.0" prefWidth="350.0" text="Package: Comfort" textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label fx:id="timeSlotLabel" alignment="CENTER" prefHeight="37.0" prefWidth="158.0" text="xx:xx" textFill="WHITE">
            <font>
               <Font size="20.0" />
            </font>
         </Label>
         <Label prefHeight="30.0" />
         <Button mnemonicParsing="false" onAction="#onConfirmBooking" prefHeight="60.0" prefWidth="150.0" style="-fx-background-color: white;" text="Confirm">
            <font>
               <Font size="20.0" />
            </font>
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </VBox>
   <VBox alignment="BOTTOM_CENTER" prefHeight="103.0" prefWidth="890.0">
      <children>
         <ProgressBar prefHeight="26.0" prefWidth="890.0" progress="1.0" />
      </children>
   </VBox>
</VBox>
