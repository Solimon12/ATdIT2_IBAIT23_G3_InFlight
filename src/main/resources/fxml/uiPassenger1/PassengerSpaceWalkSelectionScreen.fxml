<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" styleClass="bodybg" stylesheets="@../../css/PassengerBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="58.0" prefWidth="890.0">
      <Button fx:id="spaceWalkSelectionBackButton" mnemonicParsing="false" onAction="#backToPassengerStartScreen"
              prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
         <effect>
            <DropShadow/>
         </effect>
      </Button>
   </HBox>
   <Label prefHeight="50.0" />
   <HBox alignment="CENTER" prefHeight="256.0" prefWidth="890.0" spacing="125.0">
      <effect>
         <DropShadow/>
      </effect>
      <Button fx:id="passengerBookSpaceWalkButton" mnemonicParsing="false"
              onAction="#switchToPassengerBookingPackageSelectionScreen" prefHeight="175.0" prefWidth="250.0"
              style="-fx-background-color: white;" text="Book Space Walk">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="passengerReviewBookingsButton" mnemonicParsing="false"
              onAction="#switchToPassengerReviewBookingsScreen" prefHeight="175.0" prefWidth="250.0"
              style="-fx-background-color: white;" text="Review Bookings">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
   </HBox>
</VBox>
