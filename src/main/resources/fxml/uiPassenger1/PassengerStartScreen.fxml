         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="170.0" prefWidth="890.0" spacing="50.0">
      <effect>
         <DropShadow/>
      </effect>
      <Button fx:id="serviceButton" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;"
              text="Service">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="vitalsButton" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;"
              text="Vitals">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="flightDataButton" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;"
              text="Flight Data">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="cameraButton" prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;"
              text="360Â° Cameras">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
   </HBox>
   <HBox alignment="CENTER" prefHeight="145.0" prefWidth="890.0" spacing="50.0">
      <effect>
         <DropShadow/>
      </effect>
      <Button fx:id="mediaButton" mnemonicParsing="false" prefHeight="100.0" prefWidth="150.0"
              style="-fx-background-color: white;" text="Media">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="novaCreditsButton" mnemonicParsing="false" onAction="#switchToPassengerNovaCreditsMenuScreen"
              prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;" text="NovaCredits">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
      <Button fx:id="spaceWalkButton" mnemonicParsing="false" onAction="#switchToPassengerSpaceWalkSelectionScreen"
              prefHeight="100.0" prefWidth="150.0" style="-fx-background-color: white;" text="Space Walk">
         <font>
            <Font size="20.0"/>
         </font>
      </Button>
   </HBox>
</VBox>
