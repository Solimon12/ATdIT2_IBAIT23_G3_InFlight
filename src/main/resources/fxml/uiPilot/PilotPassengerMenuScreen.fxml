<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" spacing="50.0" styleClass="bodybg" stylesheets="@../../css/PilotBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="154.0" prefWidth="890.0">
      <children>
         <Button fx:id="passengerMenuBackButon" mnemonicParsing="false" onAction="#backToPilotStartScreen" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="256.0" prefWidth="890.0" spacing="50.0">
      <children>
         <Button fx:id="ShipAndSpaceCheckButton" mnemonicParsing="false" onAction="#switchToShipAndSpaceCheckScreen" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: white;" text="Ship &amp; Space Check">
            <font>
               <Font size="20.0" />
            </font>
            <effect>
               <DropShadow />
            </effect>
         </Button>
         <Button fx:id="pilotMessagePassengersButton" mnemonicParsing="false" onAction="#switchToPilotMessagePassengersScreen" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: white;" text="Message Passengers">
            <font>
               <Font size="20.0" />
            </font>
            <effect>
               <DropShadow />
            </effect>
         </Button>
         <Button fx:id="initiateSurveyButton" mnemonicParsing="false" onAction="#initiateSurvey" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: white;" text="Initiate Survey">
            <font>
               <Font size="20.0" />
            </font>
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </HBox>
   <Label prefHeight="75.0" />
</VBox>
