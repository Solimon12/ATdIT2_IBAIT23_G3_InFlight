<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" styleClass="bodybg" stylesheets="@../../css/FlightAttendantBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="58.0" prefWidth="890.0">
      <children>
         <Button fx:id="bookingReviewBackButton" mnemonicParsing="false" onAction="#backToFlightAttendantSelectPassengerInfoScreen" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </HBox>
   <Label fx:id="bookingScreenPassengerLabel" text="?" textFill="WHITE">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <HBox spacing="30" alignment="CENTER">
      <Label text="Package" style="-fx-font-size: 18px; -fx-text-fill: white;" prefWidth="200"/>
      <Label text="Time" style="-fx-font-size: 18px; -fx-text-fill: white;" prefWidth="200"/>
      <Label text="Status" style="-fx-font-size: 18px; -fx-text-fill: white;" prefWidth="200"/>
   </HBox>

   <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" style="-fx-border-color: white;">
      <children>
         <VBox fx:id="attendantPassengerBookingContainer" spacing="15.0" alignment="CENTER" />
      </children>
   </HBox>
</VBox>
