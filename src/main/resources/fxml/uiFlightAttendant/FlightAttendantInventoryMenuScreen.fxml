<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" styleClass="bodybg" stylesheets="@../../css/FlightAttendantBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="58.0" prefWidth="890.0">
      <children>
         <Button fx:id="inventoryMenuBackButton" mnemonicParsing="false" onAction="#backToFlightAttendantStartScreen" prefHeight="50.0" prefWidth="50.0" style="-fx-background-color: lightgray;" text="Back">
            <effect>
               <DropShadow />
            </effect>
         </Button>
      </children>
   </HBox>
   <Label prefHeight="50.0" />
   <Label alignment="CENTER" prefHeight="61.0" prefWidth="400.0" text="Inventory Menu" textFill="WHITE">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="330.0" prefWidth="890.0" spacing="125.0">
      <children>
         <Button fx:id="equipmentCheckOutButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#switchToFlightAttendantInventoryScreen" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: white;" text="Equipment &#10;Check-In / -Out" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
         <Button fx:id="equipmentMaintenanceButton" alignment="CENTER" mnemonicParsing="false" onAction="#switchToFlightAttendantInventoryMaintenanceScreen" prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: white;" text="Equipment &#10;Maintenance" textAlignment="CENTER">
            <font>
               <Font size="20.0" />
            </font>
         </Button>
      </children>
      <effect>
         <DropShadow />
      </effect>
   </HBox>
</VBox>
