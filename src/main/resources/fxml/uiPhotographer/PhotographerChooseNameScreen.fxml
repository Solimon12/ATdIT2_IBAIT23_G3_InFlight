<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="612.0" prefWidth="929.0" spacing="15.0" styleClass="bodybg" stylesheets="@../../css/PhotographerBackgroundStyle.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label alignment="CENTER" prefHeight="46.0" prefWidth="509.0" text="Please provide your selected name:" textFill="WHITE">
      <font>
         <Font name="System Bold" size="30.0" />
      </font>
   </Label>
   <HBox alignment="CENTER" prefHeight="66.0" prefWidth="890.0">
      <children>
         <TextField fx:id="selectedNameTextField" prefHeight="50.0" prefWidth="300.0">
            <font>
               <Font size="20.0" />
            </font>
         </TextField>
      </children>
   </HBox>
   <Label prefHeight="50.0" />
   <Label fx:id="errorLabel" textFill="red" visible="false"/>
   <Button fx:id="getStartedButton" mnemonicParsing="false" onAction="#confirmName" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: white;" text="Get started!">
      <effect>
         <DropShadow />
      </effect>
      <font>
         <Font size="20.0" />
      </font>
   </Button>
</VBox>
